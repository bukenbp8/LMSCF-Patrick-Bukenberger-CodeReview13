{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="h3 mt-5 mb-3 font-weight-normal text-center">Register</h1>

    {{ form_start(registrationForm) }}
        <div class="col-md-6 mx-auto border rounded p-3 bg-light">
            {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control mb-3'} }) }}
            {{ form_row(registrationForm.Password, { 'attr': {'class': 'form-control mb-3'} }) }}
            {{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'mb-3'} }) }}

            <button class="btn btn-primary">Register</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}

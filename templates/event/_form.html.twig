{{ form_start(form) }}
    <div class="col-md-8 mx-auto border rounded p-3 bg-light">
    {{ form_row(form.name, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.descr, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.datetime, { 'attr': {'input': 'datetime', 'class':'mb-3 row ml-1'} }) }}
    {{ form_row(form.img, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.capacity, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.email, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.phone, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.address, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.url, { 'attr': {'class': 'form-control mb-3'} }) }}
    {{ form_row(form.type, { 'attr': {'class': 'form-control mb-3'} }) }}
   
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    <a href="{{ path('event_index') }}" class='btn btn-primary'>Go back</a>
    </div>
    {{ form_end(form) }}

